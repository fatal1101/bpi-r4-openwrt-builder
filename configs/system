config system
	option hostname 'OpenWrt'
	option ttylogin '0'
	option log_size '128'
	option urandom_seed '0'
	option zonename 'Europe/Madrid'
	option log_proto 'udp'
	option conloglevel '8'
	option cronloglevel '7'
	option timezone 'CET-1CEST,M3.5.0,M10.5.0/3'

config timeserver 'ntp'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'

config led 'led_wan'
	option name 'WAN LED'
	option sysfs 'bpi-r4:yellow:wan'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'wan'

config led 'led_lan1'
	option name 'LAN1 LED'
	option sysfs 'bpi-r4:yellow:lan1'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'lan1'

config led 'led_lan2'
	option name 'LAN2 LED'
	option sysfs 'bpi-r4:yellow:lan2'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'lan2'

config led 'led_lan3'
	option name 'LAN3 LED'
	option sysfs 'bpi-r4:yellow:lan3'
	option trigger 'netdev'
	option mode 'link tx rx'
	option dev 'lan3'
